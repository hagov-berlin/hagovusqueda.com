generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model YoutubeChannel {
  id        Int               @id @default(autoincrement())
  name      String
  slug      String
  youtubeId String
  shows     Show[]
  playlists YoutubePlaylist[]
  videos    YoutubeVideo[]

  @@unique([youtubeId])
  @@unique([slug])
  @@index([slug])
}

model Show {
  id          Int               @id @default(autoincrement())
  name        String
  slug        String
  channelId   Int
  channel     YoutubeChannel    @relation(fields: [channelId], references: [id])
  playlists   YoutubePlaylist[]
  videos      YoutubeVideo[]
  transcripts Transcript[]

  @@unique([slug])
  @@index([slug])
  @@index([channelId])
}

model YoutubePlaylist {
  id        Int             @id @default(autoincrement())
  youtubeId String
  showId    Int?
  show      Show?           @relation(fields: [showId], references: [id])
  channelId Int?
  channel   YoutubeChannel? @relation(fields: [channelId], references: [id])

  @@unique([youtubeId])
}

model YoutubeVideo {
  id          Int             @id @default(autoincrement())
  youtubeId   String
  title       String
  slug        String
  showId      Int?
  show        Show?           @relation(fields: [showId], references: [id])
  channelId   Int?
  channel     YoutubeChannel? @relation(fields: [channelId], references: [id])
  durationSec Int
  date        DateTime
  subtitles   Subtitle[]
  transcripts Transcript[]
  ignored     Boolean?

  @@unique([youtubeId])
  @@index([slug])
  @@index([showId])
  @@index([channelId])
  @@index([date])
  @@index([youtubeId])
}

model Transcript {
  id Int @id @default(autoincrement())

  videoId Int
  video   YoutubeVideo @relation(fields: [videoId], references: [id])
  showId  Int
  show    Show         @relation(fields: [showId], references: [id])

  type String
  text String
  srt  String

  @@unique([videoId, type], name: "video_id_type")
  @@index([videoId])
  @@index([type])
  @@index([videoId, type])
}

model Subtitle {
  id          Int          @id @default(autoincrement())
  order       Int
  startTimeMs Int
  endTimeMs   Int
  text        String
  video       YoutubeVideo @relation(fields: [videoId], references: [id])
  videoId     Int
  type        String

  @@index([videoId])
  @@index([order])
}

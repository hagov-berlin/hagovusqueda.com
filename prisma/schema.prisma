generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model YoutubeVideo {
  id        String     @id
  title     String
  show      String?
  duration  Int
  date      DateTime
  subtitles Subtitle[] // relation
}

model Subtitle {
  id        Int          @id @default(autoincrement())
  startTime Int          // in milliseconds or seconds (pick one and stay consistent)
  endTime   Int
  text      String
  video     YoutubeVideo @relation(fields: [videoId], references: [id])
  videoId   String       // foreign key to YoutubeVideo.id
}
